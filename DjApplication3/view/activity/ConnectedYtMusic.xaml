<UserControl x:Class="DjApplication3.view.activity.ConnectedYtMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:local="clr-namespace:DjApplication3.view.activity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF909090">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <wv2:WebView2 x:Name="webView" Grid.Row="0" Grid.ColumnSpan="3"/>

        <TextBlock x:Name="txtStatus" Grid.Row="1" Grid.ColumnSpan="3"
                   Text="Connectez-vous à votre compte Google, puis cliquez sur 'Finaliser la connexion' une fois sur YouTube Music." 
                   TextAlignment="Center" Foreground="White" Margin="5"/>

        <Button x:Name="bt_continuer" Content="Finaliser la connexion" 
                Grid.Row="2" Grid.Column="1" Click="bt_continuer_Click"/>
    </Grid>
</UserControl>
