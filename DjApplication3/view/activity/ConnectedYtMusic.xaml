<UserControl x:Class="DjApplication3.view.activity.ConnectedYtMusic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjApplication3.view.activity"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FF909090">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button x:Name="bt_continuer" Content="Continuer" Margin="0,0,0,0" Grid.Row="2" Click="bt_continuer_Click" Grid.Column="1"/>
        <TextBlock 
            x:Name="TextBlock" 
            Grid.Row="1" Grid.ColumnSpan="3"
            Text="This is a long text that needs to wrap correctly." 
            TextWrapping="Wrap" 
            TextAlignment="Center" 
            VerticalAlignment="Bottom" 
            Margin="3,0,0,0" />
    </Grid>
</UserControl>
