<UserControl x:Class="DjApplication3.view.activity.MainPageMixage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjApplication3.view.activity" xmlns:local1="clr-namespace:DjApplication3.view.fragment"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            
        </Grid>
        
        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
        
        <TabControl Grid.Column="2">
            <TabItem Header="Local">
                <local1:Explorateur/>
            </TabItem>
            <TabItem Header="Youtube">
                <local1:ExplorateurYoutube/>
            </TabItem>
            <TabItem Header="Spotify">
                <local1:ExplorateurSpotify/>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
