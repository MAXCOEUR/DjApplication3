<Window x:Class="DjApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DjApplication3" xmlns:local1="clr-namespace:DjApplication3.view.activity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF404040" Closing="Window_Closing" WindowState="Maximized">
    <Grid>
        <ContentControl x:Name="MainContent"/>

        <Grid x:Name="UpdateOverlay" Grid.RowSpan="2" Background="#CC000000" Visibility="Collapsed">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                <TextBlock Text="Mise à jour des composants..." 
                    Foreground="White" FontSize="18" HorizontalAlignment="Center"/>
                <TextBlock Text="Veuillez patienter quelques instants." 
                    Foreground="LightGray" FontSize="12" HorizontalAlignment="Center"/>      
            </StackPanel>
        </Grid>
    </Grid>
</Window>
