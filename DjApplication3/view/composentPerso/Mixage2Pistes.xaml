<UserControl x:Class="DjApplication3.view.composentPerso.Mixage2Pistes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DjApplication3.view.composentPerso"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <local:TrackBarPerso x:Name="tb_mixage" Grid.Column="1" Default="50"/>
        <ComboBox x:Name="cb_pisteGauche" SelectionChanged="cb_pisteGauche_SelectionChanged" VerticalAlignment="Center"/>
        <ComboBox x:Name="cb_pisteDroite" Grid.Column="2" SelectionChanged="cb_pisteDroite_SelectionChanged" VerticalAlignment="Center"/>

    </Grid>
</UserControl>
